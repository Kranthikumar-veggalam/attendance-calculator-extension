{
  "manifest_version": 3,
  "name": "Modern Attendance Calculator",
  "version": "1.4",
  "description": "Calculates attendance and periods needed to reach a target percentage.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
    }
}